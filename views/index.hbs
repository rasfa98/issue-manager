<h1 class="float-left pageTitle">Issue Manager</h1>

<div class="dropdown">
    <button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="ion-ios-bell"></i>
    </button>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <div class="notificationTitle dropdown-item">
            <p>
                <em>Notifications</em>
            </p>
            <hr>
        </div>
    </div>
</div>

<hr> {{#each issues}}
<div id="{{id}}" class="card issue fade">
    <div class="card-body">
        <h4 class="title text-center">{{title}}</h4>
        <hr>
        <p class="body">{{body}}</p>
        <hr>
        <p>
            <i class="ion-person"></i>
            <span class="user">{{user}}</span>
        </p>
        <p>
            <i class="ion-ios-chatbubble"></i>
            <span class="comments">{{comments}}</span>
        </p>
        <p>
            <i class="ion-calendar"></i>
            <span class="created">{{created}}</span>
        </p>
        <a class="url" href="{{url}}" target="_blank">
            <i class="ion-social-github"></i> link to issue</a>

        <button class="btn btn-outline-danger float-right editState closeIssue">Close issue</button>
    </div>
</div>
{{/each}}